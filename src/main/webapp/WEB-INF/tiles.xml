<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- ======================================================================
                            Layout definition
    ======================================================================= -->
    <definition name="defaultLayout" template="/WEB-INF/jsp/common/layout/defaultLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/common/template/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/common/template/footer.jsp"/>
        <put-attribute name="meta" value="/WEB-INF/jsp/common/include/meta.jsp"/>
        <put-attribute name="title"  value="" type="string"/>
        <put-attribute name="body"   value=""/>
    </definition>

    <definition name="adminLayout" template="/WEB-INF/jsp/common/layout/adminLayout">
        <put-attribute name="header" value="/WEB-INF/jsp/common/template/header"/>
        <put-attribute name="adminMenu" value="/WEB-INF/jsp/common/template/adminMenu"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/common/template/footer"/>
        <put-attribute name="meta" value="/WEB-INF/jsp/common/include/meta"/>
        <put-attribute name="title"  value="" type="string"/>
        <put-attribute name="body"   value=""/>
    </definition>

    <!-- ======================================================================
                            Test content
    ======================================================================= -->
    <definition name="index" extends="defaultLayout">
        <put-attribute name="title"  value="Knowledge test" type="string"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/content/index.jsp"/>
    </definition>
    <definition name="runTest" extends="defaultLayout">
        <put-attribute name="title"  value="Run test"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/content/test/runTest"/>
    </definition>
    <definition name="pause" extends="defaultLayout">
        <put-attribute name="title"  value="Pause test"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/content/test/pause"/>
    </definition>
    <definition name="authorisation" extends="defaultLayout">
        <put-attribute name="title"  value="Authorisation"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/content/test/authorisation"/>
    </definition>
    <definition name="result" extends="defaultLayout">
        <put-attribute name="title"  value="Result"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/content/test/result"/>
    </definition>

    <!-- ======================================================================
                            Admin content
    ======================================================================= -->
    <definition name="adminHome" extends="adminLayout">
        <put-attribute name="title"  value="Admin home"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/content/admin/adminHome.jsp"/>
    </definition>
    <definition name="taskManager" extends="adminLayout">
        <put-attribute name="title"  value="Task manager"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/content/admin/taskManager.jsp"/>
    </definition>
    <definition name="userManager" extends="adminLayout">
        <put-attribute name="title"  value="User manager"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/content/admin/userManager.jsp"/>
    </definition>

</tiles-definitions>