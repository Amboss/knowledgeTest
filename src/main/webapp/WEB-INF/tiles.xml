<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- ======================================================================
                            Layout definition
    ======================================================================= -->
    <definition name="defaultLayout" template="/common/layout/defaultLayout.jsp">
        <put-attribute name="title" value="Template"/>
        <put-attribute name="header" value="/common/template/header.jsp"/>
        <put-attribute name="body" value="/content/index.jsp"/>
        <put-attribute name="footer" value="/common/template/footer.jsp"/>
    </definition>

    <definition name="adminLayout" template="/common/layout/adminLayout.jsp">
        <put-attribute name="title" value="Template"/>
        <put-attribute name="header" value="/common/template/header.jsp"/>
        <put-attribute name="adminMenu"   value="/common/template/adminMenu.jsp"/>
        <put-attribute name="body" value="/content/index.jsp"/>
        <put-attribute name="footer" value="/common/template/footer.jsp"/>
    </definition>

    <!-- ======================================================================
                            Test content
    ======================================================================= -->
    <definition name="index" extends="baseLayout">
        <put-attribute name="title"  value="Knowledge test"/>
        <put-attribute name="body"   value="/content/index.jsp"/>
    </definition>
    <definition name="runTest" extends="baseLayout">
        <put-attribute name="title"  value="Run test"/>
        <put-attribute name="body"   value="/content/test/runTest.jsp"/>
    </definition>
    <definition name="pause" extends="baseLayout">
        <put-attribute name="title"  value="Pause test"/>
        <put-attribute name="body"   value="/content/test/pause.jsp"/>
    </definition>
    <definition name="authorisation" extends="baseLayout">
        <put-attribute name="title"  value="Authorisation"/>
        <put-attribute name="body"   value="/content/test/authorisation.jsp"/>
    </definition>
    <definition name="result" extends="baseLayout">
        <put-attribute name="title"  value="Result"/>
        <put-attribute name="body"   value="/content/test/result.jsp"/>
    </definition>

    <!-- ======================================================================
                            Admin content
    ======================================================================= -->
    <definition name="adminHome" extends="adminLayout">
        <put-attribute name="title"  value="Admin home"/>
        <put-attribute name="body"   value="/content/admin/adminHome.jsp"/>
    </definition>
    <definition name="taskManager" extends="adminLayout">
        <put-attribute name="title"  value="Task manager"/>
        <put-attribute name="body"   value="/content/admin/taskManager.jsp"/>
    </definition>
    <definition name="userManager" extends="adminLayout">
        <put-attribute name="title"  value="User manager"/>
        <put-attribute name="body"   value="/content/admin/userManager.jsp"/>
    </definition>

</tiles-definitions>